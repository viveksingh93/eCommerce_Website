
@model  myWeb.Models.ViewModels.CategoryVM
@{
    ViewData["Title"] = "Index";
}

<div class="container p-4">
    <div class="row p-3">
        <div class="col-2">
            <h2 class="text-black">List of Categories</h2>
        </div>
        <div class="col-6">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category"><i class="bi bi-plus-circle"></i>&nbsp; Create New Category</a>
        </div>
       
        </div>
</div>

<table class="" style="width:100%">
    <thead class="text-center">
        <tr>
            <th>
                SNo.
            </th>
            <th>
                Category Name
            </th> 
            <th>
                Display Order
            </th>
            <th>
                Action
            </th>
        </tr>

    </thead>
    <hr />
    <tbody class="text-center">
        @foreach(var item in Model.categories)
        {
        <tr>
            <td>
                @item.Id
            </td>
            <td>
                @item.Name
            </td>
            <td>
                @item.DisplayOrder
            </td>
            <td role="group">
                    <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                    <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
            </td>
        </tr>
        }
    </tbody>
</table>
 